{
  "name": "Dynamic InMail",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2,
  "description": "This extension dynamically generates a customized InMail using data from the candidate's profile.",
  "version": "1.1",
  "icons": {"16": "icon.png",
			"48": "icon.png",
			"128": "icon.png"},
  "background": {
  	"scripts": ["background.js"]
  },	
  "permissions": [
  	"background",
  	"tabs", 
  	"http://*/*", 
  	"https://*/*",
    "storage"
  ],  
   "browser_action": {
  	"default_title": "Dynamic-InMail",
    "default_icon": "icon.png"
  }
}